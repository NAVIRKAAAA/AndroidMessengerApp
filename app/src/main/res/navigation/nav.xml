<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.rhorbachevskyi.viewpager.ui.fragments.auth.AuthFragment"
        android:label="AuthFragment"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_authFragment_to_userProfile"
            app:destination="@id/userProfile" />
    </fragment>
    <fragment
        android:id="@+id/userProfile"
        android:name="com.rhorbachevskyi.viewpager.ui.fragments.userprofile.UserProfile"
        android:label="UserProfile"
        tools:layout="@layout/fragment_profile">
        <argument
            android:name="email"
            app:argType="string" />
        <action
            android:id="@+id/action_userProfile_to_contactsFragment2"
            app:destination="@id/contactsFragment" />
    </fragment>
    <fragment
        android:id="@+id/contactsFragment"
        android:name="com.rhorbachevskyi.viewpager.ui.fragments.contact.ContactsFragment"
        android:label="ContactsFragment"
        tools:layout="@layout/fragment_contacts">
        <action
            android:id="@+id/action_contactsFragment_to_contactProfile"
            app:destination="@id/contactProfile" />
    </fragment>
    <fragment
        android:id="@+id/contactProfile"
        android:name="com.rhorbachevskyi.viewpager.ui.fragments.contactprofile.ContactProfile"
        android:label="ContactProfile"
        tools:layout="@layout/fragment_detail_view">
        <argument
            android:name="Contact"
            app:argType="com.rhorbachevskyi.viewpager.domain.model.Contact" />
    </fragment>

</navigation>