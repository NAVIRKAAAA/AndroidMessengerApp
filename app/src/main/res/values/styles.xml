<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="searchViewTheme">
        <item name="android:editTextColor">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="searchViewStyle">
        <item name="android:theme">@style/searchViewTheme</item>
        <item name="android:closeIcon">@drawable/ic_close_search</item>
        <item name="android:searchIcon">@drawable/ic_find_scope</item>
    </style>
    <style name="CalendarViewStyle">
        <item name="android:dateTextAppearance">@style/CalendarViewDateTextAppearance</item>
        <item name="android:dayOfWeekBackground">@style/CalendarViewWeekDayTextAppearance</item>
        <item name="android:dayOfWeekTextAppearance">@style/CalendarViewWeekDayTextAppearance</item>
    </style>

    <style name="CalendarViewDateTextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CalendarViewWeekDayTextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>


</resources>